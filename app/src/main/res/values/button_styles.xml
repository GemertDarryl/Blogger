<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="clearBtnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="blackBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="rippleColor">@color/textColorDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">14sp</item>
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>